@model List<RoleAssignViewModel>

@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId"></input>
            <input type="hidden" asp-for="@Model[i].Name"></input>
            <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input"></input>
            <label class="form-chack-label" for="@Model[i].Exists">@Model[i].Name</label>
        </div>
    }
    <br/>
    <button class="btn btn-info">Kaydet</button>
</form>
<br/>
<a href="/Admin/AdminRole/UserRoleList/" class="btn btn-primary">Kullanıcı Listesi</a>